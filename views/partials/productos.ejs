<div class="container mt-3">   

    <%- include('./ordenarProductos.ejs') %> 

    <div class=" d-flex mt-3">

        <%- include('./filter.ejs') %> 

        <div class="row col-9 m-0 row-cols-3">

            <% data.forEach(e=>{ %> 
                <div class="border border-info">
